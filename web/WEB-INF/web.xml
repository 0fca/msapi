<?xml version="1.0" encoding="UTF-8"?>
<web-app version="2.5" xmlns="http://java.sun.com/xml/ns/javaee" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xsi:schemaLocation="http://java.sun.com/xml/ns/javaee http://java.sun.com/xml/ns/javaee/web-app_2_5.xsd">
    <listener>
        <listener-class>com.obsidiam.controller.listeners.ServletContextListenerImpl</listener-class>
    </listener>
    <servlet>
        <servlet-name>LoginController</servlet-name>
        <servlet-class>com.obsidiam.controller.LoginController</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>LogoutController</servlet-name>
        <servlet-class>com.obsidiam.controller.LogoutController</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>AddNotificationController</servlet-name>
        <servlet-class>com.obsidiam.controller.AddNotificationController</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>RemoveNotificationController</servlet-name>
        <servlet-class>com.obsidiam.controller.RemoveNotificationController</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>ListNotificationController</servlet-name>
        <servlet-class>com.obsidiam.controller.ListNotificationController</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>EditNotificationController</servlet-name>
        <servlet-class>com.obsidiam.controller.EditNotificationController</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>NotificationController</servlet-name>
        <servlet-class>com.obsidiam.controller.NotificationController</servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>LoginController</servlet-name>
        <url-pattern>/login</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>LogoutController</servlet-name>
        <url-pattern>/logout</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>AddNotificationController</servlet-name>
        <url-pattern>/notification/add</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>RemoveNotificationController</servlet-name>
        <url-pattern>/notification/remove</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>EditNotificationController</servlet-name>
        <url-pattern>/notification/edit</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>NotificationController</servlet-name>
        <url-pattern>/notification</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>ListNotificationController</servlet-name>
        <url-pattern>/notification/list</url-pattern>
    </servlet-mapping>
    <session-config>
        <session-timeout>
            30
        </session-timeout>
    </session-config>
    <welcome-file-list>
        <welcome-file>index.jsp</welcome-file>
    </welcome-file-list>
    <login-config>
        <auth-method>BASIC</auth-method>
    </login-config>
</web-app>
